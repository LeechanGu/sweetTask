<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.leechangu.sweettask.SetCommonTaskActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Task:"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/commonTaskEditText"
            android:layout_alignStart="@+id/commonTaskEditText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commonTaskEditText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/commonTaskEditText"
            android:layout_alignStart="@+id/commonTaskEditText"
            android:id="@+id/timeBasisRadioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:id="@+id/dailyRadioButton"
                android:checked="false"
                android:layout_above="@+id/weeklyRadioButton"
                android:layout_alignLeft="@+id/commonTaskEditText"
                android:layout_alignStart="@+id/commonTaskEditText"  />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:id="@+id/weeklyRadioButton"
                android:checked="false"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/dailyRadioButton"
                android:layout_alignStart="@+id/dailyRadioButton"   />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:id="@+id/monthlyRadioButton"
                android:checked="false"
                android:layout_below="@+id/weeklyRadioButton"
                android:layout_alignLeft="@+id/weeklyRadioButton"
                android:layout_alignStart="@+id/weeklyRadioButton" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The phone would vibrate if task is not ifAllTasksFinished before due time."
            android:id="@+id/textView2"
            android:layout_above="@+id/button"
            android:layout_alignLeft="@+id/timeBasisRadioGroup"
            android:layout_alignStart="@+id/timeBasisRadioGroup" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map Task"
                android:id="@+id/mapTaskButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not set"
                android:id="@+id/mapTaskDetailTextView"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Task"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="onSetTaskClicked"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
